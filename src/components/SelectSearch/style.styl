.SelectSearch
  position: relative
  display: inline-block
  width:100%
  font-family:Verdana;

  &__select
    position: absolute
    opacity :0
    top:0
    width:100%
    height:40px
    padding:5px 5px
    z-index:3
    &:focus
      outline: none

  &__box
    display: flex
    justify-content: space-between
    align-items: center
    box-sizing: border-box
    border:1px solid #cccccc
    border-radius:4px
    width:100%
    padding:5px 10px
    height:40px
    cursor: default
    &_open
      &_down
        border-bottom-left-radius:0
        border-bottom-right-radius:0
      &_up
        border-top-left-radius:0
        border-top-right-radius:0

  &__value
    display:none
    &_active
      display block

  &__placeholder
    display: inline-block
    padding:0 10px
    top:9px
    font-size:16px
    position: absolute
    color:#a3a6af
    -webkit-transition-property: top, bottom,font-size
    -webkit-transition-duration: 0.2s
    background-color:white
    &_rolled-up
      top:-8px
      font-size:12px
    &_hide
      display:none

  &__input
    border:0
    display :none
    &_active
     display block
    &:focus
      outline: none

  &__arrow
    position: relative
    top: 2px
    box-sizing: border-box
    border: 5px solid transparent
    border-top: 5px solid #a3a6af
    &_invert
      border-bottom: 5px solid #a3a6af
      border-top: 0
      top: 0

  .dropdown
    background-color:#FFF
    box-sizing border-box
    border :1px solid #cccccc
    border-radius:4px

    width :100%
    &_down
      border-top:0
      border-top-left-radius :0
      border-top-right-radius :0
    &_up
      bottom: 39px
      border-bottom-left-radius :0
      border-bottom-right-radius :0
    &__list
      list-style :none
      padding:0
      margin:0
    &__item
      padding: 10px 10px
      cursor: default
      &:hover,&_active
        background-color: lightblue
      &_empty-text
        color:#ababab
      span
        text-decoration: underline
        color:darkorange

  &__dropdown
    overflow auto
    position absolute
    z-index:2







